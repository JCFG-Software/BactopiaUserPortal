<div slider id="slider-distance">
  <div>
    <div inverse-left style="width:70%;"></div>
    <div inverse-right style="width:70%;"></div>
    <div range style="left:30%;right:40%;"></div>
    <span thumb style="left:30%;"></span>
    <span thumb style="left:60%;"></span>
    <p> Chosen from <span id="value">0.0045</span> to <span id="value">0.009</span></p>

  </div>
  <input type="range" tabindex="0" value="0.0045" max="0.015" min="0" step="0.00000001" oninput="
  this.value=Math.min(this.value,this.parentNode.childNodes[5].value-0.00000001);
  var value=(100/(parseFloat(this.max)-parseFloat(this.min)))*parseFloat(this.value)-(100/(parseFloat(this.max)-parseFloat(this.min)))*parseFloat(this.min);
  var children = this.parentNode.childNodes[1].childNodes;
  children[1].style.width=value+'%';
  children[5].style.left=value+'%';
  children[7].style.left=value+'%';children[11].style.left=value+'%';
  children[11].childNodes[1].innerHTML=this.value;" />

  <input type="range" tabindex="0" value="0.009" max="0.015" min="0" step="0.00000001" oninput="
  this.value=Math.max(this.value,this.parentNode.childNodes[3].value-(-0.00000001));
  var value=(100/(parseFloat(this.max)-parseFloat(this.min)))*parseFloat(this.value)-(100/(parseFloat(this.max)-parseFloat(this.min)))*parseFloat(this.min);
  var children = this.parentNode.childNodes[1].childNodes;
  children[3].style.width=(100-value)+'%';
  children[5].style.right=(100-value)+'%';
  children[9].style.left=value+'%';
  children[11].childNodes[3].innerHTML=this.value;" />
</div>
